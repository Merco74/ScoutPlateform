<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Liste des <%= titre %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        .table thead th {
            text-align: center;
            vertical-align: middle;
        }
        .table td {
            vertical-align: middle;
        }
        .download-link {
            display: block;
            margin: 2px 0;
            color: #0d6efd;
            text-decoration: none;
        }
        .download-link:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container py-4">
        <h1 class="text-center mb-4">Liste des <%= titre %></h1>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th style="width: 10%;">Nom</th>
                    <th style="width: 10%;">Prénom</th>
                    <th style="width: 10%;">Date de naissance</th>
                    <th style="width: 5%;">Âge</th>
                    <th style="width: 15%;">Email</th>
                    <th style="width: 10%;">Tél. portable</th>
                    <th style="width: 15%;">Contact urgence</th>
                    <th style="width: 5%;">Droit image</th>
                    <th style="width: 5%;">Transport</th>
                    <th style="width: 15%;">Pièces jointes</th>
                </tr>
            </thead>
            <tbody>
                <% inscriptions.forEach(inscription => { %>
                    <tr>
                        <td><%= inscription.nom %></td>
                        <td><%= inscription.prenom %></td>
                        <td><%= new Date(inscription.dateNaissance).toLocaleDateString('fr-FR') %></td>
                        <td><%= inscription.age %></td>
                        <td><%= inscription.email %></td>
                        <td><%= inscription.telPortable %></td>
                        <td><%= inscription.contactUrgence.nom %> <%= inscription.contactUrgence.prenom %> (<%= inscription.contactUrgence.telPortable %>)</td>
                        <td><%= inscription.droitImage ? 'Oui' : 'Non' %></td>
                        <td><%= inscription.autorisationTransport ? 'Oui' : 'Non' %></td>
                        <td>
                            <% if (inscription.pdfPath && inscription.pdfPath.startsWith('http')) { %>
                                <a href="<%= inscription.pdfPath %>" class="download-link" target="_blank" download="Autorisation_<%= inscription.nom %>.pdf">Télécharger Autorisation</a>
                            <% } %>
                            <% if (inscription.sanitaryPdfPath && inscription.sanitaryPdfPath.startsWith('http')) { %>
                                <a href="<%= inscription.sanitaryPdfPath %>" class="download-link" target="_blank" download="Fiche_Sanitaire_<%= inscription.nom %>.pdf">Télécharger Fiche Sanitaire</a>
                            <% } %>
                            <% if (inscription.vaccinScan && inscription.vaccinScan.startsWith('http')) { %>
                                <a href="<%= inscription.vaccinScan %>" class="download-link" target="_blank" download="Vaccins_<%= inscription.nom %>.pdf">Vaccins</a>
                            <% } %>
                            <% if (inscription.medicationScan && inscription.medicationScan.startsWith('http')) { %>
                                <a href="<%= inscription.medicationScan %>" class="download-link" target="_blank" download="Medicaments_<%= inscription.nom %>.pdf">Médicaments</a>
                            <% } %>
                            <% if (inscription.recommendationMedicalScan && inscription.recommendationMedicalScan.startsWith('http')) { %>
                                <a href="<%= inscription.recommendationMedicalScan %>" class="download-link" target="_blank" download="Recommandations_<%= inscription.nom %>.pdf">Recommandations Médicales</a>
                            <% } %>
                            <% if (inscription.otherDocuments && inscription.otherDocuments.length > 0) { %>
                                <% inscription.otherDocuments.forEach((doc, index) => { %>
                                    <% if (doc && doc.startsWith('http')) { %>
                                        <a href="<%= doc %>" class="download-link" target="_blank" download="Document_<%= index + 1 %>_<%= inscription.nom %>.pdf">Autre Doc <%= doc.split('/').pop() %></a>
                                    <% } %>
                                <% }); %>
                            <% } %>
                            <% if (!inscription.pdfPath && !inscription.sanitaryPdfPath && !inscription.vaccinScan && !inscription.medicationScan && !inscription.recommendationMedicalScan && (!inscription.otherDocuments || inscription.otherDocuments.length === 0)) { %>
                                <span>-</span>
                            <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <a href="/" class="btn btn-primary mt-3">Retour</a>
    </div>
    <footer class="text-center py-3 mt-4" style="background-color: #f8f9fa;">
        <div>
            &copy; 2025 Scouts de Cluses. Tous droits réservés.<br>
            <a href="/mentions-legales" style="color:#2e7d32;text-decoration:underline;">Mentions légales</a>
        </div>
    </footer>
</body>
</html>